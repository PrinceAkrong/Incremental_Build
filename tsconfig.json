{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": false,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@config/*": ["src/config/*"],
      "@screens/*": ["src/screens/*"],
      "@app-types": [
        "src/types/index.ts",
        "cypress",
        "@types/testing-library__cypress"
      ],
      "@app-types/graphql": ["./types/graphql-types.ts"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@utils/test": ["src/utils/test-utils"],
      "@contexts/*": ["src/contexts/*"],
      "@hooks/*": ["src/hooks/*"]
    }
  },
  "typeRoots": ["node_modules/@types", "types", "cypress"],
  "exclude": [".cache", "public", "node_modules"]
}
