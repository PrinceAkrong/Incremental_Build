{
  "name": "raulmelo.dev",
  "private": true,
  "author": "Raul Melo <melo.raulf@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "12.x",
    "yarn": "1.x"
  },
  "workspaces": [
    "projects/*"
  ],
  "scripts": {
    "server:dev": "yarn workspace @raulmelo.dev/server dev",
    "server:build": "yarn workspace @raulmelo.dev/server build",
    "server:start": "yarn workspace @raulmelo.dev/server start",
    "web:dev": "yarn workspace @raulmelo.dev/web dev",
    "web:build": "yarn workspace @raulmelo.dev/web build",
    "web:test": "yarn workspace @raulmelo.dev/web test",
    "web:e2e": "yarn workspace @raulmelo.dev/web e2e:run",
    "web:lint": "yarn workspace @raulmelo.dev/web lint"
  },
  "devDependencies": {
    "@sub-tv/prettier-config": "1.1.0",
    "husky": "4.2.5",
    "pin-dependencies-checker": "1.0.5",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn pin-checker --devDeps=true --deps=true"
    }
  }
}
